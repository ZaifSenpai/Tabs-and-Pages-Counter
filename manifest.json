{
    "name": "Tabs and Pages Counter",
    "version": "1.0",
    "description": "Count tabs created and pages visited.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Tabs and Pages Counter"
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs"
    ],
    "author": "Zaif Senpai"
}